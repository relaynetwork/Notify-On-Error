begin
  require "jeweler"
  Jeweler::Tasks.new do |gem|
    gem.name = "notify-on-error"
    gem.summary = "Let the developer know when a controller expception is allowed to bubble up."
    gem.files = Dir["{lib}/**/*", "{app}/**/*", "{config}/**/*"]
    gem.authors = ['Paul Santa Clara']
    gem.email  = 'psantaclara@relaynetwork.com'
    gem.version = '1.0.0'
  end
rescue
  puts "Jeweler or one of its dependencies is not installed."
end
